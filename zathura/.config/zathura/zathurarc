# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#000200"
set completion-fg "#FBEBC0"
set completion-group-bg "#000200"
set completion-group-fg "#667B9E"
set completion-highlight-bg "#FBEBC0"
set completion-highlight-fg "#000200"

set recolor-lightcolor "#000200"
set recolor-darkcolor "#FBEBC0"
set default-bg "#000200"
set default-fg "#FBEBC0"

set inputbar-bg "#000200"
set inputbar-fg "#FBEBC0"
set notification-bg "#000200"
set notification-fg "#FBEBC0"
set notification-error-bg "#75788A"
set notification-error-fg "#FBEBC0"
set notification-warning-bg "#75788A"
set notification-warning-fg "#FBEBC0"
set statusbar-bg "#000200"
set statusbar-fg "#FBEBC0"
set index-bg "#000200"
set index-fg "#FBEBC0"
set index-active-bg "#FBEBC0"
set index-active-fg "#000200"
set render-loading-bg "#000200"
set render-loading-fg "#FBEBC0"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen