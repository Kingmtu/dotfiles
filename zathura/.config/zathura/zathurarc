# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#262730"
set completion-fg "#F7F5EB"
set completion-group-bg "#262730"
set completion-group-fg "#8C79B5"
set completion-highlight-bg "#F7F5EB"
set completion-highlight-fg "#262730"

set recolor-lightcolor "#262730"
set recolor-darkcolor "#F7F5EB"
set default-bg "#262730"
set default-fg "#F7F5EB"

set inputbar-bg "#262730"
set inputbar-fg "#F7F5EB"
set notification-bg "#262730"
set notification-fg "#F7F5EB"
set notification-error-bg "#4A5B86"
set notification-error-fg "#F7F5EB"
set notification-warning-bg "#4A5B86"
set notification-warning-fg "#F7F5EB"
set statusbar-bg "#262730"
set statusbar-fg "#F7F5EB"
set index-bg "#262730"
set index-fg "#F7F5EB"
set index-active-bg "#F7F5EB"
set index-active-fg "#262730"
set render-loading-bg "#262730"
set render-loading-fg "#F7F5EB"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen