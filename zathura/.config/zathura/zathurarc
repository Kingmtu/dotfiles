# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#110F0F"
set completion-fg "#EADED2"
set completion-group-bg "#110F0F"
set completion-group-fg "#7D6858"
set completion-highlight-bg "#EADED2"
set completion-highlight-fg "#110F0F"

set recolor-lightcolor "#110F0F"
set recolor-darkcolor "#EADED2"
set default-bg "#110F0F"
set default-fg "#EADED2"

set inputbar-bg "#110F0F"
set inputbar-fg "#EADED2"
set notification-bg "#110F0F"
set notification-fg "#EADED2"
set notification-error-bg "#7E6453"
set notification-error-fg "#EADED2"
set notification-warning-bg "#7E6453"
set notification-warning-fg "#EADED2"
set statusbar-bg "#110F0F"
set statusbar-fg "#EADED2"
set index-bg "#110F0F"
set index-fg "#EADED2"
set index-active-bg "#EADED2"
set index-active-fg "#110F0F"
set render-loading-bg "#110F0F"
set render-loading-fg "#EADED2"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen