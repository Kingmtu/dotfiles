# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#1C171C"
set completion-fg "#FDF0D5"
set completion-group-bg "#1C171C"
set completion-group-fg "#5E4865"
set completion-highlight-bg "#FDF0D5"
set completion-highlight-fg "#1C171C"

set recolor-lightcolor "#1C171C"
set recolor-darkcolor "#FDF0D5"
set default-bg "#1C171C"
set default-fg "#FDF0D5"

set inputbar-bg "#1C171C"
set inputbar-fg "#FDF0D5"
set notification-bg "#1C171C"
set notification-fg "#FDF0D5"
set notification-error-bg "#5D4661"
set notification-error-fg "#FDF0D5"
set notification-warning-bg "#5D4661"
set notification-warning-fg "#FDF0D5"
set statusbar-bg "#1C171C"
set statusbar-fg "#FDF0D5"
set index-bg "#1C171C"
set index-fg "#FDF0D5"
set index-active-bg "#FDF0D5"
set index-active-fg "#1C171C"
set render-loading-bg "#1C171C"
set render-loading-fg "#FDF0D5"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen