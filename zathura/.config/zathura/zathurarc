# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#151517"
set completion-fg "#FBE5C7"
set completion-group-bg "#151517"
set completion-group-fg "#6A4945"
set completion-highlight-bg "#FBE5C7"
set completion-highlight-fg "#151517"

set recolor-lightcolor "#151517"
set recolor-darkcolor "#FBE5C7"
set default-bg "#151517"
set default-fg "#FBE5C7"

set inputbar-bg "#151517"
set inputbar-fg "#FBE5C7"
set notification-bg "#151517"
set notification-fg "#FBE5C7"
set notification-error-bg "#4F4F55"
set notification-error-fg "#FBE5C7"
set notification-warning-bg "#4F4F55"
set notification-warning-fg "#FBE5C7"
set statusbar-bg "#151517"
set statusbar-fg "#FBE5C7"
set index-bg "#151517"
set index-fg "#FBE5C7"
set index-active-bg "#FBE5C7"
set index-active-fg "#151517"
set render-loading-bg "#151517"
set render-loading-fg "#FBE5C7"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen