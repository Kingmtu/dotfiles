# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#27262A"
set completion-fg "#ECE2F3"
set completion-group-bg "#27262A"
set completion-group-fg "#7A5A8C"
set completion-highlight-bg "#ECE2F3"
set completion-highlight-fg "#27262A"

set recolor-lightcolor "#27262A"
set recolor-darkcolor "#ECE2F3"
set default-bg "#27262A"
set default-fg "#ECE2F3"

set inputbar-bg "#27262A"
set inputbar-fg "#ECE2F3"
set notification-bg "#27262A"
set notification-fg "#ECE2F3"
set notification-error-bg "#605A6B"
set notification-error-fg "#ECE2F3"
set notification-warning-bg "#605A6B"
set notification-warning-fg "#ECE2F3"
set statusbar-bg "#27262A"
set statusbar-fg "#ECE2F3"
set index-bg "#27262A"
set index-fg "#ECE2F3"
set index-active-bg "#ECE2F3"
set index-active-fg "#27262A"
set render-loading-bg "#27262A"
set render-loading-fg "#ECE2F3"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen