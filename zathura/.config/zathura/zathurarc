# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#152528"
set completion-fg "#E3E4E5"
set completion-group-bg "#152528"
set completion-group-fg "#719472"
set completion-highlight-bg "#E3E4E5"
set completion-highlight-fg "#152528"

set recolor-lightcolor "#152528"
set recolor-darkcolor "#E3E4E5"
set default-bg "#152528"
set default-fg "#E3E4E5"

set inputbar-bg "#152528"
set inputbar-fg "#E3E4E5"
set notification-bg "#152528"
set notification-fg "#E3E4E5"
set notification-error-bg "#809276"
set notification-error-fg "#E3E4E5"
set notification-warning-bg "#809276"
set notification-warning-fg "#E3E4E5"
set statusbar-bg "#152528"
set statusbar-fg "#E3E4E5"
set index-bg "#152528"
set index-fg "#E3E4E5"
set index-active-bg "#E3E4E5"
set index-active-fg "#152528"
set render-loading-bg "#152528"
set render-loading-fg "#E3E4E5"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen