# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#16161D"
set completion-fg "#E5F1FA"
set completion-group-bg "#16161D"
set completion-group-fg "#70595B"
set completion-highlight-bg "#E5F1FA"
set completion-highlight-fg "#16161D"

set recolor-lightcolor "#16161D"
set recolor-darkcolor "#E5F1FA"
set default-bg "#16161D"
set default-fg "#E5F1FA"

set inputbar-bg "#16161D"
set inputbar-fg "#E5F1FA"
set notification-bg "#16161D"
set notification-fg "#E5F1FA"
set notification-error-bg "#3C5C77"
set notification-error-fg "#E5F1FA"
set notification-warning-bg "#3C5C77"
set notification-warning-fg "#E5F1FA"
set statusbar-bg "#16161D"
set statusbar-fg "#E5F1FA"
set index-bg "#16161D"
set index-fg "#E5F1FA"
set index-active-bg "#E5F1FA"
set index-active-fg "#16161D"
set render-loading-bg "#16161D"
set render-loading-fg "#E5F1FA"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen