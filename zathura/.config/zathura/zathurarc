# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#1F2121"
set completion-fg "#DFE7DA"
set completion-group-bg "#1F2121"
set completion-group-fg "#998677"
set completion-highlight-bg "#DFE7DA"
set completion-highlight-fg "#1F2121"

set recolor-lightcolor "#1F2121"
set recolor-darkcolor "#DFE7DA"
set default-bg "#1F2121"
set default-fg "#DFE7DA"

set inputbar-bg "#1F2121"
set inputbar-fg "#DFE7DA"
set notification-bg "#1F2121"
set notification-fg "#DFE7DA"
set notification-error-bg "#B27A7D"
set notification-error-fg "#DFE7DA"
set notification-warning-bg "#B27A7D"
set notification-warning-fg "#DFE7DA"
set statusbar-bg "#1F2121"
set statusbar-fg "#DFE7DA"
set index-bg "#1F2121"
set index-fg "#DFE7DA"
set index-active-bg "#DFE7DA"
set index-active-fg "#1F2121"
set render-loading-bg "#1F2121"
set render-loading-fg "#DFE7DA"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen