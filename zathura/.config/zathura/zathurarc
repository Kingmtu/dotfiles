# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#CFD6D6"
set completion-fg "#020A0A"
set completion-group-bg "#CFD6D6"
set completion-group-fg "#2E6057"
set completion-highlight-bg "#020A0A"
set completion-highlight-fg "#CFD6D6"

set recolor-lightcolor "#CFD6D6"
set recolor-darkcolor "#020A0A"
set default-bg "#CFD6D6"
set default-fg "#020A0A"

set inputbar-bg "#CFD6D6"
set inputbar-fg "#020A0A"
set notification-bg "#CFD6D6"
set notification-fg "#020A0A"
set notification-error-bg "#425666"
set notification-error-fg "#020A0A"
set notification-warning-bg "#425666"
set notification-warning-fg "#020A0A"
set statusbar-bg "#CFD6D6"
set statusbar-fg "#020A0A"
set index-bg "#CFD6D6"
set index-fg "#020A0A"
set index-active-bg "#020A0A"
set index-active-fg "#CFD6D6"
set render-loading-bg "#CFD6D6"
set render-loading-fg "#020A0A"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen