# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#121115"
set completion-fg "#FCF8F5"
set completion-group-bg "#121115"
set completion-group-fg "#E7A867"
set completion-highlight-bg "#FCF8F5"
set completion-highlight-fg "#121115"

set recolor-lightcolor "#121115"
set recolor-darkcolor "#FCF8F5"
set default-bg "#121115"
set default-fg "#FCF8F5"

set inputbar-bg "#121115"
set inputbar-fg "#FCF8F5"
set notification-bg "#121115"
set notification-fg "#FCF8F5"
set notification-error-bg "#DB8FDA"
set notification-error-fg "#FCF8F5"
set notification-warning-bg "#DB8FDA"
set notification-warning-fg "#FCF8F5"
set statusbar-bg "#121115"
set statusbar-fg "#FCF8F5"
set index-bg "#121115"
set index-fg "#FCF8F5"
set index-active-bg "#FCF8F5"
set index-active-fg "#121115"
set render-loading-bg "#121115"
set render-loading-fg "#FCF8F5"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen