# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#010B0E"
set completion-fg "#FCF9FB"
set completion-group-bg "#010B0E"
set completion-group-fg "#658385"
set completion-highlight-bg "#FCF9FB"
set completion-highlight-fg "#010B0E"

set recolor-lightcolor "#010B0E"
set recolor-darkcolor "#FCF9FB"
set default-bg "#010B0E"
set default-fg "#FCF9FB"

set inputbar-bg "#010B0E"
set inputbar-fg "#FCF9FB"
set notification-bg "#010B0E"
set notification-fg "#FCF9FB"
set notification-error-bg "#677C84"
set notification-error-fg "#FCF9FB"
set notification-warning-bg "#677C84"
set notification-warning-fg "#FCF9FB"
set statusbar-bg "#010B0E"
set statusbar-fg "#FCF9FB"
set index-bg "#010B0E"
set index-fg "#FCF9FB"
set index-active-bg "#FCF9FB"
set index-active-fg "#010B0E"
set render-loading-bg "#010B0E"
set render-loading-fg "#FCF9FB"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen