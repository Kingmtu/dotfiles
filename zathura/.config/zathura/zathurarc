# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#0F0F13"
set completion-fg "#D6FAFE"
set completion-group-bg "#0F0F13"
set completion-group-fg "#B4628D"
set completion-highlight-bg "#D6FAFE"
set completion-highlight-fg "#0F0F13"

set recolor-lightcolor "#0F0F13"
set recolor-darkcolor "#D6FAFE"
set default-bg "#0F0F13"
set default-fg "#D6FAFE"

set inputbar-bg "#0F0F13"
set inputbar-fg "#D6FAFE"
set notification-bg "#0F0F13"
set notification-fg "#D6FAFE"
set notification-error-bg "#5A63A9"
set notification-error-fg "#D6FAFE"
set notification-warning-bg "#5A63A9"
set notification-warning-fg "#D6FAFE"
set statusbar-bg "#0F0F13"
set statusbar-fg "#D6FAFE"
set index-bg "#0F0F13"
set index-fg "#D6FAFE"
set index-active-bg "#D6FAFE"
set index-active-fg "#0F0F13"
set render-loading-bg "#0F0F13"
set render-loading-fg "#D6FAFE"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen