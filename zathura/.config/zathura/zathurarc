# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#0C0E10"
set completion-fg "#CFE3F7"
set completion-group-bg "#0C0E10"
set completion-group-fg "#3D4652"
set completion-highlight-bg "#CFE3F7"
set completion-highlight-fg "#0C0E10"

set recolor-lightcolor "#0C0E10"
set recolor-darkcolor "#CFE3F7"
set default-bg "#0C0E10"
set default-fg "#CFE3F7"

set inputbar-bg "#0C0E10"
set inputbar-fg "#CFE3F7"
set notification-bg "#0C0E10"
set notification-fg "#CFE3F7"
set notification-error-bg "#3E4449"
set notification-error-fg "#CFE3F7"
set notification-warning-bg "#3E4449"
set notification-warning-fg "#CFE3F7"
set statusbar-bg "#0C0E10"
set statusbar-fg "#CFE3F7"
set index-bg "#0C0E10"
set index-fg "#CFE3F7"
set index-active-bg "#CFE3F7"
set index-active-fg "#0C0E10"
set render-loading-bg "#0C0E10"
set render-loading-fg "#CFE3F7"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen