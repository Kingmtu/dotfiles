# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#1E1F1D"
set completion-fg "#FCF6EF"
set completion-group-bg "#1E1F1D"
set completion-group-fg "#88716E"
set completion-highlight-bg "#FCF6EF"
set completion-highlight-fg "#1E1F1D"

set recolor-lightcolor "#1E1F1D"
set recolor-darkcolor "#FCF6EF"
set default-bg "#1E1F1D"
set default-fg "#FCF6EF"

set inputbar-bg "#1E1F1D"
set inputbar-fg "#FCF6EF"
set notification-bg "#1E1F1D"
set notification-fg "#FCF6EF"
set notification-error-bg "#4E534D"
set notification-error-fg "#FCF6EF"
set notification-warning-bg "#4E534D"
set notification-warning-fg "#FCF6EF"
set statusbar-bg "#1E1F1D"
set statusbar-fg "#FCF6EF"
set index-bg "#1E1F1D"
set index-fg "#FCF6EF"
set index-active-bg "#FCF6EF"
set index-active-fg "#1E1F1D"
set render-loading-bg "#1E1F1D"
set render-loading-fg "#FCF6EF"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen