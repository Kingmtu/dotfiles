# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#FFFCF9"
set completion-fg "#0A1021"
set completion-group-bg "#FFFCF9"
set completion-group-fg "#5E362F"
set completion-highlight-bg "#0A1021"
set completion-highlight-fg "#FFFCF9"

set recolor-lightcolor "#FFFCF9"
set recolor-darkcolor "#0A1021"
set default-bg "#FFFCF9"
set default-fg "#0A1021"

set inputbar-bg "#FFFCF9"
set inputbar-fg "#0A1021"
set notification-bg "#FFFCF9"
set notification-fg "#0A1021"
set notification-error-bg "#273318"
set notification-error-fg "#0A1021"
set notification-warning-bg "#273318"
set notification-warning-fg "#0A1021"
set statusbar-bg "#FFFCF9"
set statusbar-fg "#0A1021"
set index-bg "#FFFCF9"
set index-fg "#0A1021"
set index-active-bg "#0A1021"
set index-active-fg "#FFFCF9"
set render-loading-bg "#FFFCF9"
set render-loading-fg "#0A1021"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen