# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# Theme using template variables
set recolor "true"

set completion-bg "#0D0E10"
set completion-fg "#EBE5E6"
set completion-group-bg "#0D0E10"
set completion-group-fg "#454655"
set completion-highlight-bg "#EBE5E6"
set completion-highlight-fg "#0D0E10"

set recolor-lightcolor "#0D0E10"
set recolor-darkcolor "#EBE5E6"
set default-bg "#0D0E10"
set default-fg "#EBE5E6"

set inputbar-bg "#0D0E10"
set inputbar-fg "#EBE5E6"
set notification-bg "#0D0E10"
set notification-fg "#EBE5E6"
set notification-error-bg "#43464F"
set notification-error-fg "#EBE5E6"
set notification-warning-bg "#43464F"
set notification-warning-fg "#EBE5E6"
set statusbar-bg "#0D0E10"
set statusbar-fg "#EBE5E6"
set index-bg "#0D0E10"
set index-fg "#EBE5E6"
set index-active-bg "#EBE5E6"
set index-active-fg "#0D0E10"
set render-loading-bg "#0D0E10"
set render-loading-fg "#EBE5E6"

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard

set font "JetbrainsMono Nerd Font 10"
set recolor-reverse-video "true"
set recolor-keephue "true"
set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen